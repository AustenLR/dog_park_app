<% include ../partials/header %>

<h1>Sign up</h1>
<form method="POST" action="/signup" >
  <div class="form-group">
    <label for="user[name]">Dog's Name: </label>
    <input type="text" name="user[username]" class="form-control" autofocus>
  </div>
  <div class="form-group">
    <label> Picture: </label>
    <input type="picture" name="user[picture]" class="form-control">
  </div>
  <div class="form-group">
    <label> Age: </label>
    <input type="age" name="user[age]" class="form-control">
  </div>
  <div class="form-group">
    <label> Breed: </label>
    <input type="breed" name="user[breed]" class="form-control">
  </div>
  <div class="form-group">
    <label> Favorite Dog Park: </label>
    <input type="favDogPark" name="user[favDogPark]" class="form-control">
  </div>
  <div class="form-group">
    <label> Password: </label>
    <input type="password" name="user[password]" class="form-control">
  </div>
  <div class="form-group">
    <input type="submit" value="Sign up" class="btn btn-primary">
  </div>
</form>
<a href="/login">Already have an account? Login in here</a>

<% include ../partials/footer %>